{{>layout/header}}
<div class="container">
    <div class="py-5 text-center">
        <h1>게시판판판</h1>
    </div>

    <div>
        <div>
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
        </div>
    </div>

    <hr class="my-4">

    <div>
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>게시글 번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종 수정일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>
</div>
{{>layout/footer}}