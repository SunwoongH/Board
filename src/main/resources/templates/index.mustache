{{>layout/header}}
<div class="container">
    <div class="py-5 text-center">
        <h1>게시판판판</h1>
    </div>

    <div>
        <div>
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
            {{#userName}}
                닉네임: <span id="user">{{userName}}</span>
                <a href="/logout" role="button" class="btn btn-info active">로그아웃</a>
            {{/userName}}
            {{^userName}}
                <a href="/oauth2/authorization/google" role="button" class="btn btn-secondary">구글 로그인</a>
                <a href="/oauth2/authorization/naver" role="button" class="btn btn-secondary">네이버 로그인</a>
            {{/userName}}
        </div>
    </div>

    <hr class="my-4">

    <div>
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>게시글 번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종 수정일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>
</div>
{{>layout/footer}}