{{>layout/header}}
<div class="container">
    <div class="py-5 text-center">
        <h1>게시글 등록</h1>
    </div>

    <div>
        <form>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력해 주세요.">
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" class="form-control" id="author" placeholder="작성자를 입력해 주세요.">
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" id="content" placeholder="내용을 입력해 주세요."></textarea>
            </div>
        </form>

        <hr class="my-4">

        <div class="row">
            <div class="col">
                <a href="/" role="button" class="w-100 btn btn-secondary btn-lg">취소</a>
            </div>
            <div class="col">
                <button type="button" class="w-100 btn btn-primary btn-lg" id="btn-save">등록</button>
            </div>
        </div>
    </div>
</div>
{{>layout/footer}}